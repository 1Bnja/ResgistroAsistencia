# ==========================================
# EXPORT SERVICE - CONFIGURACIÓN
# ==========================================

# Puerto del servicio de exportación
# NOTA: El notification-service usa 3003, así que usa 3004 para export
PORT=3004

# Ambiente
NODE_ENV=development

# Nivel de logs
LOG_LEVEL=info

# ==========================================
# MONGODB ATLAS (CLOUD)
# ==========================================
# Usar la misma base de datos que el API Backend
MONGODB_URI=FFFFFFFFFFFFFFFFFFFFF

# ==========================================
# INFORMACIÓN DE LA APLICACIÓN
# ==========================================
APP_NAME=Sistema de Control de Asistencia con Reconocimiento Facial
UNIVERSITY_NAME=Universidad de Talca
DEPARTMENT_NAME=Administración de Redes

# ==========================================
# CORS (permitir acceso desde el frontend)
# ==========================================
CORS_ORIGIN=*

# ==========================================
# INTEGRACIÓN CON OTROS SERVICIOS (OPCIONAL)
# ==========================================
# API Backend (por si necesitas llamar endpoints)
API_BACKEND_URL=http://localhost:3000/api/v1

# WebSocket (por si necesitas enviar notificaciones en tiempo real)
WEBSOCKET_SERVICE_URL=http://localhost:3002

# Frontend (para generar links en reportes)
FRONTEND_URL=http://localhost

